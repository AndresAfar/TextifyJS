{
  "name": "textifyjs-lib",
  "version": "1.1.0",
  "author": "Andres Afar <andres.afarx@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndresAfar/TextifyJS.git"
  },
  "keywords": [
    "textify",
    "editor",
    "rich text",
    "wysiwyg",
    "i18n"
  ],
  "type": "module",
  "files": ["dist", "src/translations.js"],
  "main": "./dist/textifyjslib.umd.cjs",
  "module": "./dist/textifyjslib.js",
  "exports": {
    ".": {
      "import": "./dist/textifyjslib.js",
      "require": "./dist/textifyjslib.umd.cjs"
    },
    "./translations": {
      "import": "./src/translations.js",
      "require": "./dist/translations.cjs"
    },
    "./dist/textifyjslib.css": "./dist/textifyjslib.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "vite": "^6.0.1"
  }
}
